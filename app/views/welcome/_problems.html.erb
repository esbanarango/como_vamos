<section class='problems'>
  <% 5.times do %>
    <div class='problem'>
      <h5>
        <%= link_to random_problem %>
        <span class='small'>(<%= pluralize rand(10), "solution" %>)</span>
      </h5>

      <span>Uva Online Judge</span>

      <div class='categories'>
        <% random_category(3).each do |category| %>
          <span class='category success'>
            <%= link_to category.name %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</section>
