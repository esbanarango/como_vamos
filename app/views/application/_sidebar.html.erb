<section class='sidebar'>
  <%= cache 'sidebar_categories' do %>
    <h3>Categories</h3>

    <ul>
      <% sidebar_categories.each do |category| %>
        <%= content_tag_for(:li, category) do %>
          <%= link_to category.name.titleize, '#' %>
        <% end %>
      <% end %>
    </ul>
  <% end %>
</section>
