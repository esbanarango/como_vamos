<section class='sidebar'>
  <%= cache localized_key('sidebar_categories') do %>
    <h3><%= t('.categories') %></h3>

    <ul>
      <% sidebar_categories.each do |category| %>
        <%= content_tag_for(:li, category) do %>
          <%= nav_link category.name.titleize, category %>
        <% end %>
      <% end %>
    </ul>
  <% end %>
</section>
